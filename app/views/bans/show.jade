extends ../layouts/application

block content
  .row
    .span12
      .page-header
        h1
          a(href=ban.player.link)= ban.player.name
          | 's ban on 
          a(href=ban.server.link)= ban.server.ip
  .row
    .span4
      h2 Details
      table.table.table-striped
        tr
          th Player
          td: a(href=ban.player.link)= ban.player.name
        tr
          th Status
          td: span(class="ban-status-#{ban.status}")= ban.status
        tr
          th Server
          td: a(href=ban.server.link)= ban.server.ip
        tr
          th Reason
          td= ban.reason
        tr
          th Issued by
          if ban.issuer
            td: a(href=ban.issuer.link)= ban.issuer.name
          else
            td Server
        tr
          th Date
          td.date= ban.date
        tr
          th End
          if ban.end
            td.date= ban.end
          else
            td Permaban
    .span8
      h2 Proof
      p The proof is in the pudding
