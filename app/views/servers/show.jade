extends ../layouts/application

block content
  .row
    .span12
      h1= server.ip
      hr
  .row
    .span4
      h2= server.ip
      p= server.desc

      h2 Details
      table.table.table-striped
        tr
          th Ban Count
          td= banCount
    .span8
      h2 Recent Bans
      table.table.table-striped
        thead
          tr
            th Player
            th Reason
            th Date banned
            th Banned by
            th Show
        tbody
          each ban in bans
            tr
              td: a(href=ban.player.link)= ban.player.name
              td= ban.reason
              td.date= ban.date
              td= ban.admin
              td
                a(href=ban.link) Show ban
