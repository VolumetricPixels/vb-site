crypto = require 'crypto'
mongoose = require 'mongoose'

schema = new mongoose.Schema
  ip: type: String, required: yes, unique: yes
  desc: type: String, default: null
  apikey: type: String

schema.methods.generateKey = (cb) ->
  crypto.randomBytes 20, (ex, buf) =>
    @apikey = buf.toString('base64').replace(/\//g, '_').replace(/\+/g, '-')
    model = @model @constructor.modelName
    model.findOne {apikey: @apikey}, (err, doc) =>
      if doc
        @generateKey cb
      else
        cb @apikey

schema.path('ip').validate (ip) ->
  parts = ip.split ':'
  host = parts[0]
  port = parseInt(parts[parts.length - 1]) || 25565

  validHost = /^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])$|^(([a-zA-Z]|[a-zA-Z][a-zA-Z0-9\-]*[a-zA-Z0-9])\.)*([A-Za-z]|[A-Za-z][A-Za-z0-9\-]*[A-Za-z0-9])$|^\s*((([0-9A-Fa-f]{1,4}:){7}([0-9A-Fa-f]{1,4}|:))|(([0-9A-Fa-f]{1,4}:){6}(:[0-9A-Fa-f]{1,4}|((25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)(\.(25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)){3})|:))|(([0-9A-Fa-f]{1,4}:){5}(((:[0-9A-Fa-f]{1,4}){1,2})|:((25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)(\.(25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)){3})|:))|(([0-9A-Fa-f]{1,4}:){4}(((:[0-9A-Fa-f]{1,4}){1,3})|((:[0-9A-Fa-f]{1,4})?:((25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)(\.(25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)){3}))|:))|(([0-9A-Fa-f]{1,4}:){3}(((:[0-9A-Fa-f]{1,4}){1,4})|((:[0-9A-Fa-f]{1,4}){0,2}:((25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)(\.(25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)){3}))|:))|(([0-9A-Fa-f]{1,4}:){2}(((:[0-9A-Fa-f]{1,4}){1,5})|((:[0-9A-Fa-f]{1,4}){0,3}:((25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)(\.(25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)){3}))|:))|(([0-9A-Fa-f]{1,4}:){1}(((:[0-9A-Fa-f]{1,4}){1,6})|((:[0-9A-Fa-f]{1,4}){0,4}:((25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)(\.(25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)){3}))|:))|(:(((:[0-9A-Fa-f]{1,4}){1,7})|((:[0-9A-Fa-f]{1,4}){0,5}:((25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)(\.(25[0-5]|2[0-4]\d|1\d\d|[1-9]?\d)){3}))|:)))(%.+)?\s*$/.test host
  validPort = port > 0 and port < 65536

  return validHost and validPort
, 'Invalid IP'

schema.pre 'save', (next) ->
  unless @apikey
    @generateKey ->
      next()
  else
    next()

schema.pre 'remove', (next) ->
  Ban = mongoose.model 'Ban'
  Ban.find({server: @_id}).remove ->
    next()

schema.virtual('link').get -> "/servers/#{@ip}"

schema.virtual('editLink').get -> "/servers/#{@ip}/edit"
schema.virtual('editLink').get -> "/servers/#{@ip}/new"

module.exports = mongoose.model 'Server', schema
